<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- PRN EditText -->
    <EditText
        android:id="@+id/prnEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter PRN"
        android:inputType="text"
        android:layout_marginTop="40dp"
        android:padding="16dp"
        android:layout_alignParentTop="true" />

    <!-- Book Lecture Button -->
    <Button
        android:id="@+id/bookLectureButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/prnEditText"
        android:layout_marginTop="20dp"
        android:text="Book Lecture"
        android:padding="16dp" />

    <!-- TextView to display fetched appointment details -->
    <TextView
        android:id="@+id/detailsTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bookLectureButton"
        android:layout_marginTop="40dp"
        android:text="Appointment Details will be shown here"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        android:padding="16dp" />

    <!-- ID EditText for user input -->
    <EditText
        android:id="@+id/cmpid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detailsTextView"
        android:layout_marginTop="20dp"
        android:hint="Enter Your ID"
        android:inputType="text"
        android:padding="16dp"
        android:visibility="gone" />

    <!-- Next Step Button -->
    <Button
        android:id="@+id/nextStepButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/cmpid"
        android:layout_marginTop="40dp"
        android:text="Next Step"
        android:padding="16dp"
        android:enabled="false" />
</RelativeLayout>